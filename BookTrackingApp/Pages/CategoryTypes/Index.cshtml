@page
@model BookTrackingApp.Pages.CategoryTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Category Types</h1>

<p>
    <a asp-page="Create" class="btn btn-new">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="th-gray">
            <th>
                @Html.DisplayNameFor(model => model.CategoryType[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CategoryType) {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Type">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Type">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Type">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
